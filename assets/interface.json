{
    // 本文件主要定义了通用 UI 的行为和显示内容
    // 可参考文档和示例添加更多您需要的功能
    // 文档：https://maafw.xyz/docs/3.3-ProjectInterfaceV2
    // 示例：https://github.com/MaaXYZ/MaaFramework/blob/main/sample/interface.json
    "interface_version": 2,
    "name": "BABox",
    "description": "碧蓝档案学生练度导出工具",
    "contact": "Issue: https://github.com/Oneton429/BABox/issues",
    "license": "AGPL-3.0 license",
    "welcome": "欢迎使用BABox! 本项目不完善，欢迎提交Issue或PR进行改进。\n请确保分辨率比例为1920x1080",
    // 填写项目地址和版本号可实现自动更新功能
    "github": "https://github.com/Oneton429/BABox",
    "version": "1.0.4",
    // Mirror酱为第三方分发服务，新项目默认关闭
    // 若有需要请联系 Mirror酱 开通，直接自行开启是无法使用的
    // "mirrorchyan_rid": "MaaXXX",
    // "mirrorchyan_multiplatform": true,
    "controller": [
        {
            "name": "桌面端",
            "type": "Win32",
            "win32": {
                "class_regex": ".*",
                "window_regex": "Blue Archive",
                // 截图及控制方式，请根据项目实际情况修改
                // 文档: https://maafw.xyz/docs/2.4-ControlMethods
                "screencap": "FramePool", // 截图方式
                "mouse": "Seize", // 鼠标控制方式
                "keyboard": "Seize" // 键盘控制方式
            },
            "display_short_side": 1080
        },
        {
            "name": "安卓端",
            "type": "Adb",
            "display_short_side": 1080
        }
    ],
    "resource": [
        {
            "name": "ALL",
            "path": [
                "./resource"
            ]
        }
    ],
    // 可选的 agent 示例
    "agent": {
        "child_exec": "python",
        "child_args": [
            "./agent/main.py"
        ]
    },
    "task": [
        {
            "name": "Box导出（导航）",
            "entry": "入口（导航）"
        },
        {
            "name": "Box导出（无导航）",
            "entry": "入口（无导航）",
            "description": "请务必在学生详情界面开始此任务"
        },
        {
            "name": "导出为HTML",
            "entry": "导出为HTML",
            "description": "将已导出的结构化学生数据生成HTML文件",
            "default_check": true
        }
    ],
    "option": {
    }
}
